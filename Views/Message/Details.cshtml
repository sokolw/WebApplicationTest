@model Message
@{
    ViewData["Title"] = "Details message";
}

<h1 class="display-3">Details message</h1>

<ul class="list-group" style="width: 200px;">
    <li class="list-group-item list-group-item-secondary">>Text</li>
    <li class="list-group-item list-group-item-info">@Model.Text</li>
    <li class="list-group-item list-group-item-secondary">>Email</li>
    <li class="list-group-item list-group-item-info">@Model.Email</li>
    <li class="list-group-item list-group-item-secondary">>Phone</li>
    <li class="list-group-item list-group-item-info">@Model.Phone</li>
    <li class="list-group-item list-group-item-secondary">>Date</li>
    <li class="list-group-item list-group-item-info">@Model.Date</li>
</ul>

<a asp-area="" asp-controller="Message" asp-action="Index" class="btn btn-primary">Back</a>

